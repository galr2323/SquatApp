<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sqvat.squat.activities.ExerciseActivity">

    <include layout="@layout/toolbar"></include>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/instructions_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        style="@style/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/instructions_header"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instructions_lv"></ListView>
        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muscles"
        android:id="@+id/textView5"

        style="@style/header"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="chest, biceps"
        android:id="@+id/muscles"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="+ Add to workout"-->
        <!--android:id="@+id/add_to_workout"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--/>-->

    <com.shamanland.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:floatingActionButtonColor="@color/colorAccent"

        android:id="@+id/add_to_workout"

        android:src="@drawable/ic_action_add"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/linearLayout" />
</RelativeLayout>
