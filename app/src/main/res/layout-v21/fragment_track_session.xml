<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_margin="0dp"
    >


        <!--Session's info-->
        <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"


        android:id="@+id/today_card_view"

        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"



        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"


                android:id="@+id/today_workout_header"

                android:background="@color/colorPrimary"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    style="@style/card_header"
                    android:textSize="24sp"

                    android:text="Today"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/card_header"
                    android:textSize="18sp"
                    android:id="@+id/today_session_card_sub_header"/>
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/today_session_info"

                android:layout_below="@id/today_workout_header"
                android:dividerHeight="0dp"
                android:divider="@android:color/transparent"/>
        </RelativeLayout>




    </android.support.v7.widget.CardView>

