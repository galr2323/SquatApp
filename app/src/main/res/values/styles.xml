<?xml version="1.0" encoding="utf-8"?>
<resources >
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">25dp</item>

    </style>

    <style name="header">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="card_header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginLeft">8dp</item>

    </style>

    <style name="card">
        <item name="android:paddingRight">-7dp</item>
        <item name="android:paddingLeft">-7dp</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/dividerColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="input">
        <item name="app:primaryColor">@color/colorPrimary</item>
        <item name="app:floatingLabel">highlight</item>
    </style>




    <color name="dividerColor">#E0E0E0</color>

    <color name="colorPrimary">#F44336</color>
    <color name="colorPrimaryDark">#E53935</color>
    <color name="colorAccent">#FFD600</color>
</resources>