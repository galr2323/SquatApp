<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name="AppTheme" parent="AppThemeBase"/>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">25dp</item>

    </style>

    <style name="header">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="card_header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">8dp</item>

    </style>

    <style name="card">
        <item name="android:paddingRight">-7dp</item>
        <item name="android:paddingLeft">-7dp</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/dividerColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="tabsBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tabs" parent="tabsBase">

    </style>

    <style name="drawer_item">

    </style>

    <!--<style name="input">-->
        <!--<item name="sqvat.squat:primaryColor">@color/colorPrimary</item>-->
        <!--<item name="sqvat.squat:floatingLabel">highlight</item>-->
    <!--</style>-->




    <color name="dividerColor">#B6B6B6</color>

    <color name="colorPrimary">#F44336</color>
    <color name="colorPrimaryDark">#D32F2F</color>
    <color name="colorAccent">#FFC107</color>
    <color name="transparent">@android:color/transparent</color>
</resources>